<Window x:Class="SmartLifeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartLifeManager"
        mc:Ignorable="d"
        Title="SmartLifeManager" Height="600" Width="1200" Icon="/Bez-nazwy.ico">
    <Grid x:Name="mainGrid" Background="#424242">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Height="100" Background="DarkGray" Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Content="Lokalizacja : Zabawa 227" Grid.Row="0" Foreground="Black" VerticalAlignment="Center" FontSize="30"></Label>
                <Label Content="Ogólna Ocena Otoczenia : 89%" Grid.Row="1" Foreground="Black" VerticalAlignment="Center" FontSize="30"></Label>
            </Grid>
            <Label VerticalAlignment="Center" MinWidth="100" Foreground="Black" HorizontalAlignment="Left" Margin="10,10,10,10" x:Name="ProgramLabel" Content="Zanieczyszczenie Powietrza : PM10 80 μg/m³" FontSize="30" Grid.Column="1"></Label>
        </Grid>
        <DockPanel x:Name="MainView" Margin="10,10,10,10"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" />
    </Grid>
</Window>
