<SmartLifeManager:BaseViewControl x:Class="SmartLifeManager.Views.WaterConditionView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                  xmlns:SmartLifeManager="clr-namespace:SmartLifeManager.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartLifeManager.Views"
      mc:Ignorable="d" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="imageBox" VerticalAlignment="Center" HorizontalAlignment="Center"  FontSize="150"  Grid.Column="0" Grid.Row="0" Grid.RowSpan="4" ></Label>
        <Label x:Name="LocationLabel" Content="INFORMACJE O MIEJSCU:" Grid.Column="0" Grid.Row="5" Grid.RowSpan="3"  VerticalAlignment="Center" FontSize="20"></Label>
        <Label x:Name="Station" Content="Stacja: " Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" FontSize="20"></Label>
        <Label x:Name="River" Content="Rzeka: " Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" FontSize="20"></Label>
        <Label x:Name="WaterStatus" Content="Stan Wody: " Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" FontSize="20"></Label>
        <Label x:Name="StatusDateTime" Content="Data Pomiaru: " Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" FontSize="20"></Label>
        <Label x:Name="WaterTemperature" Content="Temperatura wody: " Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" FontSize="20"></Label>
        <Label x:Name="TemperatureDateTime" Content="Data Pomiaru: " Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" FontSize="20"></Label>
        <Label x:Name="IcePhenomen" Content="Zjawisko Lodowe: " Grid.Column="1" Grid.Row="6" VerticalAlignment="Center" FontSize="20"></Label>
        <Label x:Name="DateAndTimeLabel" Content="INFO" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" FontSize="20"></Label>
        <Label x:Name="TemperatureLabel" Content="INFO" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" FontSize="20"></Label>
        <Label x:Name="WindSpeedLabel" Content="INFO" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" FontSize="20"></Label>
        <Label x:Name="WindDirectionLabel" Content="INFO" Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" FontSize="20"></Label>
        <Label x:Name="WetLabel" Content="INFO" Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" FontSize="20"></Label>
        <Label x:Name="TotalPrecipitationLabel" Content="INFO" Grid.Column="2" Grid.Row="5" VerticalAlignment="Center" FontSize="20"></Label>
        <Label x:Name="PressureLabel" Content="INFO" Grid.Column="2" Grid.Row="6" VerticalAlignment="Center" FontSize="20"></Label>
    </Grid>
</SmartLifeManager:BaseViewControl>
